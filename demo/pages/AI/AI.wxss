/**index.wxss**/
.box {
  margin: 20rpx;
  padding: 20rpx;
  border: 1px solid silver;
  border-radius: 10px;
  background-color: rgb(240, 238, 215);
}

.container-out {
  height: 600rpx;
  width: 650rpx;
  background-color: #3ab936;
  margin: 20rpx auto;
  border-radius: 40rpx;
  box-shadow: 0 10px 0 #1a8e33;
  position: relative;
}

.container-in {
  width: 580rpx;
  height: 530rpx;
  background-color: #1a8e4e;
  border-radius: 40rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.circle {
  position: absolute;
  display: block;
  border-radius: 50%;
  height: 20rpx;
  width: 20rpx;
}

.image {
  width: 100%;
  height: 100%;
}

.buttonimage {
  width: 200rpx;
  height: 200rpx;
  margin-top: 140rpx;
  margin-right: 120rpx;
}

.baikeinfo {
  padding: 20rpx;
  margin: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  box-shadow: 0rpx 2rpx 4rpx 4rpx #074d41;
  height: 400rpx;
  width: auto;
  background: #1a8e84;
  border-radius: 20rpx;
}

.text {
  margin-left: 100rpx;
  margin-bottom: 30rpx;
}

.title {
  margin-top: 30rpx;
  font-size: 30px;
  color: rgb(0, 73, 63);
  text-align: center;
  font-family: fantasy;
  font-weight: bolder;
}

.baikecard {
  /* display: flex; */
  flex-direction: column;
  color: #fff;
  text-align: center;
}

.baikecontent {
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;

  font-size: 24px;
  color: #fff;
  margin: 30rpx 20rpx;
  line-height: 70rpx;
}